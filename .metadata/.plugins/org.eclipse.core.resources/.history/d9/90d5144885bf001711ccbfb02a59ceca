package security_master;
import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JButton;
import java.awt.Font;
import javax.swing.JTextField;
import javax.swing.JPasswordField;
import javax.swing.JLabel;
import javax.swing.JOptionPane;

import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

public class Boton_Admin extends JFrame {

	private JPanel contentPane;
	public static JTextField textFieldUsuario;
	public static JPasswordField passwordFieldContraseña;

	/**
	 * Launch the application.
	 */
	
	/**
	 * Create the frame.
	 */
	public Boton_Admin() {
		setTitle("Security Master");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(600, 300, 450, 300);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		contentPane.setLayout(null);
		
		JPanel panel = new JPanel();
		panel.setBounds(0, 0, 434, 261);
		contentPane.add(panel);
		panel.setLayout(null);
		
		Admi_Contraseña Datos = new Admi_Contraseña();
		
		JButton ingresarContraseña = new JButton("Ingresar");
		ingresarContraseña.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				
				
				if (Datos.Pass()==1 ){
						
					JOptionPane.showMessageDialog(null, "Bienvenido al Gestór de Security Master");
					
					
				}
				
				else {
					
					JOptionPane.showMessageDialog(null, "Contraseña o Usuario incorrectos, vuelve a intentarlo");
				}
				
				
				Gestor_Admin Ges_Ad = new Gestor_Admin();
				Ges_Ad.setVisible(true);
				dispose();
				
			}
		}
		
				
		            		);
		ingresarContraseña.setFont(new Font("Tahoma", Font.PLAIN, 13));
		ingresarContraseña.setBounds(117, 201, 89, 23);
		panel.add(ingresarContraseña);
		
		textFieldUsuario = new JTextField();
		textFieldUsuario.setBounds(204, 80, 128, 20);
		panel.add(textFieldUsuario);
		textFieldUsuario.setColumns(10);
		
		JButton SalirContraseña = new JButton("Salir");
		SalirContraseña.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				
				System.exit(0);
			}
		});
		SalirContraseña.setFont(new Font("Tahoma", Font.PLAIN, 13));
		SalirContraseña.setBounds(243, 201, 89, 23);
		panel.add(SalirContraseña);
		
		passwordFieldContraseña = new JPasswordField();
		passwordFieldContraseña.setBounds(204, 129, 128, 20);
		panel.add(passwordFieldContraseña);
		
		JLabel IngreseUsuario = new JLabel("Ingrese Usuario:");
		IngreseUsuario.setFont(new Font("Tahoma", Font.PLAIN, 15));
		IngreseUsuario.setBounds(78, 83, 128, 17);
		panel.add(IngreseUsuario);
		
		JLabel IngreseContraseña = new JLabel("Ingrese Contrase\u00F1a:");
		IngreseContraseña.setFont(new Font("Tahoma", Font.PLAIN, 15));
		IngreseContraseña.setBounds(53, 123, 141, 28);
		panel.add(IngreseContraseña);
		
		JLabel lblAdministrador = new JLabel("Administrador");
		lblAdministrador.setFont(new Font("Tahoma", Font.BOLD, 16));
		lblAdministrador.setBounds(146, 11, 166, 32);
		panel.add(lblAdministrador);
	}
}
